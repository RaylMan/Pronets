        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pronets.Viev"
        mc:Ignorable="d"
        Title="Настройки" Height="179.333" Width="319.333" ResizeMode="NoResize">
    <Grid>
        <Label Content="Имя сервера" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>
        <TextBox x:Name="tbxServer" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,37,0,0" Width="268"  ></TextBox>
        <Label Content="Имя базы данных" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,64,0,0"/>
        <TextBox x:Name="tbxBase" VerticalAlignment="Top" HorizontalAlignment="Left"  Margin="10,90,0,0" Width="268"  />
        <Button x:Name="btnSave" Content="  Сохранить  " Click="BtnSave_Click" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Window>
