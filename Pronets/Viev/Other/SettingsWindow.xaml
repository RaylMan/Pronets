<Window x:Class="Pronets.Viev.Other.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pronets.Viev.Other"
        mc:Ignorable="d"
        Title="Настройки" Height="245" Width="340" Background="Gainsboro" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Closed="Window_Closed">
    <Grid>


        <Label Content="Логин"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,8,0,0"/>
        <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Margin="10,30,0,0" Background="Gainsboro" IsReadOnly="True" />

        <Label Content="Старый пароль"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,47,0,0"/>
        <TextBox Text="{Binding OldPassword, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Margin="10,70,0,0" />

        <Label Content="Новый пароль"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,88,0,0"/>
        <TextBox Text="{Binding NewPassword, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Margin="10,109,0,0" />

        <Label Content="Повторить пароль"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,127,0,0"/>
        <TextBox Text="{Binding VerifiedPassword, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" Margin="10,151,0,0" />

        <Label Content="Зарплата за день (По умолчанию)"  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,8,5,0"/>
        <TextBox Text="{Binding PricePerDay, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" Margin="0,30,10,0" />

        <Label Content="Зарплата за час (По умолчанию)"  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,48,5,0"/>
        <TextBox Text="{Binding PricePerHour, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" Margin="0,70,10,0" />

        <Label Content="Инженер (Для печати)"  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,88,5,0"/>
        <TextBox Text="{Binding ChiefEngineer, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" Margin="0,109,10,0" />

        <Label Content="Ответственное лицо (Для печати)"  VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,127,4,0"/>
        <TextBox Text="{Binding ResponsiblePerson, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" Margin="0,151,10,0" />

        <Button Content="  Изменить пароль  " Command="{Binding ChangePasswordCommand}" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10"/>
        <Button Content="  Сохранить  " Command="{Binding SaveCommand}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" />
    </Grid>
</Window>
